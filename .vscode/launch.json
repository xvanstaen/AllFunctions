{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "type": "firefox",
        "request": "launch",
        "reAttach": true,
        "name": "Launch index.html",
        "file": "${workspaceFolder}/index.html"
      },
      {
        "type": "firefox",
        "request": "attach",
        "name": "Attach"
      },
      {
        "name": "ng serve",
        "type": "firefox",
        "request": "launch",
        "preLaunchTask": "npm: start",
        "url": "http://localhost:4200/",
        "pathMappings": [
          {
            "url": "webpack:///src",
            "path": "${workspaceFolder}/src"
          },
          {
            "url": "webpack:///src",
            "path": "${workspaceFolder}/src"
          },
          {
            "url": "webpack:///src/app/Sport/sport-reports/sport-reports.component.ts",
            "path": "${workspaceFolder}/src/app/sport-reports/sport-reports.component.ts"
          }
        ]
      },
      {
        "name": "ng test",
        "type": "firefox",
        "request": "launch",
        "preLaunchTask": "npm: test",
        "url": "http://localhost:9876/debug.html"
      }
    ]
}